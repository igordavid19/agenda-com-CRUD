<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('includes/messages'); %>

        <div class="row">
            <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Se você ainda não tem conta, preencha abaixo:</p>

                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="mb-3">
                      <label>Digite um e-mail válido</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="mb-3">
                      <label>Digite uma senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Finalizar cadastro</button>
                  </form>
            </div>

            <div class="col-lg">
                <h4>Entrar</h4>
                <p>Faça login com seus dados cadastrados:</p>

                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="mb-3">
                      <label>Digite o e-mail de login</label>
                      <input type="email" class="form-control" name="email">
                    </div>
                    <div class="mb-3">
                      <label>Digite a senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                  </form>
                <form>
    
            </div>
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>